include_rules
CXXFLAGS += -isystem $(BOOST_INCLUDE) -I$(ASYNCLOG_INCLUDE) -I$(PERFORMANCE_LOG_INCLUDE)
LDFLAGS += -L$(ASYNCLOG_LIB) -L$(PERFORMANCE_LOG_LIB) -lasynclog -lperformance_log
: foreach *.cpp |> !cxx |>
: foreach *.o | $(ASYNCLOG_LIB)/libasynclog.a $(PERFORMANCE_LOG_LIB)/libperformance_log.a |> !ld |> %B
