.gitignore
BOOST_INCLUDE=$(TUP_CWD)/boost
ASYNCLOG_INCLUDE=$(TUP_CWD)/asynclog/include
ASYNCLOG_LIB=$(TUP_CWD)/asynclog/lib
PERFORMANCE_LOG_INCLUDE=$(TUP_CWD)/performance_log/include
PERFORMANCE_LOG_LIB=$(TUP_CWD)/performance_log/lib
CXXFLAGS=-std=c++11 -Wall -Wextra -Werror -O3 -g
LDFLAGS=-lpthread
!cxx = |> g++ $(CXXFLAGS) -c %f -o %o |> %B.o
!ar = |> ar crs %o %f |>
!ld = |> g++ %f -o %o $(LDFLAGS) |>
